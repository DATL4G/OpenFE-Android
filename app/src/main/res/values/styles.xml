<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryDark">@color/primaryDarkColor</item>
        <item name="colorAccent">@color/primaryLightColor</item>
        <item name="shapeAppearanceLargeComponent">@style/BottomSheetComponent</item>
        <item name="android:statusBarColor">@color/defaultStatusBarColor</item>
    </style>

    <style name="AppTheme.Overlay" parent="AppTheme">
        <item name="colorPrimary">@android:color/transparent</item>
    </style>

    <style name="OverviewFragmentTheme" parent="AppTheme">
        <item name="android:statusBarColor">@color/overviewStatusbarColor</item>
        <item name="drawerArrowStyle">@style/OverviewDrawerArrowStyle</item>
    </style>

    <style name="OverviewDrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="color">@color/overviewDrawerToggleColor</item>
    </style>

    <style name="ExplorerFragmentTheme" parent="AppTheme">
        <item name="android:statusBarColor">@color/explorerStatusbarColor</item>
    </style>

    <style name="Divider">
        <item name="background">?android:attr/listDivider</item>
        <item name="android:background">?android:attr/listDivider</item>
    </style>

    <style name="Divider.Horizontal" parent="Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">2dp</item>
    </style>

    <style name="BottomSheetComponent" parent="ShapeAppearance.MaterialComponents.LargeComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">16dp</item>
        <item name="cornerRadius">16dp</item>
        <item name="android:radius">16dp</item>
    </style>

    <style name="DayNight.BottomNavigationView.Colored" parent="Widget.MaterialComponents.BottomNavigationView.Colored">
        <item name="android:background">@color/defaultToolBarColor</item>
    </style>

    <declare-styleable name="ClickableCardView">
        <attr name="cardBackgroundSelector" format="reference" />
    </declare-styleable>

</resources>
