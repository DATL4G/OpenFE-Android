<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryDark">@color/primaryDarkColor</item>
        <item name="colorAccent">@color/primaryLightColor</item>
        <item name="shapeAppearanceLargeComponent">@style/BottomSheetComponent</item>
        <item name="android:statusBarColor" tools:targetApi="lollipop">@color/defaultBackgroundColor</item>
    </style>

    <style name="AppTheme.Overlay" parent="AppTheme">
        <item name="colorPrimary">@android:color/transparent</item>
    </style>

    <style name="FragmentTheme" parent="AppTheme">
        <item name="android:statusBarColor" tools:targetApi="lollipop">@color/defaultStatusBarColor</item>
        <item name="drawerArrowStyle">@style/NavigationStyle</item>
    </style>

    <style name="NavigationStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="color">@color/defaultNavigationColor</item>
    </style>

    <style name="Divider">
        <item name="background">?android:attr/listDivider</item>
        <item name="android:background">?android:attr/listDivider</item>
    </style>

    <style name="Divider.Horizontal" parent="Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">2dp</item>
    </style>

    <style name="BottomSheetComponent" parent="ShapeAppearance.MaterialComponents.LargeComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">16dp</item>
        <item name="cornerRadius">16dp</item>
        <item name="android:radius">16dp</item>
    </style>

    <style name="DayNight.BottomAppBar.Colored" parent="Widget.MaterialComponents.BottomAppBar.Colored">
        <item name="backgroundTint">@color/defaultToolBarColor</item>
    </style>

    <style name="ExplorerCheckBox" parent="FragmentTheme">
        <item name="colorControlNormal">@android:color/transparent</item>
        <item name="colorControlActivated">@color/highlightColor</item>
        <item name="android:colorControlNormal" tools:targetApi="lollipop">@android:color/transparent</item>
        <item name="android:colorControlActivated" tools:targetApi="lollipop">@color/highlightColor</item>
    </style>

    <declare-styleable name="ClickableCardView">
        <attr name="cardBackgroundSelector" format="reference" />
    </declare-styleable>

    <declare-styleable name="StepProgressBar">
        <attr name="max" format="integer" />
        <attr name="step" format="integer" />
        <attr name="stepDoneColor" format="color|reference" />
        <attr name="stepUndoneColor" format="color|reference" />
        <attr name="stepMargin" format="dimension" />
        <attr name="cornerRadius" format="dimension" />
    </declare-styleable>

</resources>
